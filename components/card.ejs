<div class="card product-card border-0" style="max-width: 350px;">
    <div class="position-relative">
        <a href="#" type="button" class="fw-medium position-absolute top-0  badge rounded-pill bg-primary-100 text-primary fs-6 m-4 px-2 py-1 d-flex justify-content-center align-items-center">
            <img class="me-1" src="/assets/images/product/leaf-icon.png" alt="安心認證icon圖示">
            安心認證
        </a>
        <img src='/assets/images/<%= img %>.jpg' class="card-img-top" alt="商品圖片">
        <button type="button" class="position-absolute bottom-0 end-0 border-0 rounded-circle bg-white p-3 m-4" onclick="toggleFavorite(this)">
            <span class="material-icons fs-2 d-block favorite-icon text-gray-400">favorite_border</span>
        </button>
    </div>

    <div class="card-body">
        <h6 class="text-primary-400 mb-1">
            <%= farm %>
        </h6>
        <h5 class="card-title fs-lg-<%= size %>">
            <%= title %>
        </h5>
        <p class="card-text text-gray-300  multi-line-truncate mb-3">
            <%= content %>
        </p>
        <div class="mb-3">
            <span class=" fs-5 fw-bold text-secondary-300 ">
                <%= price %>
            </span>
            <del class="text-gray-300  ms-2">
                <%= discount %>
            </del>
            <span class="mx-1 text-gray-300 ">
                <%= slash %>
            </span>
            <span class="text-gray-300 ">
                <%= grams %>
            </span>
        </div>

        <!-- toast功能 -->
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1080">
            <div id="actionToast" class="toast align-items-center text-black bg-primary-50 border-1 border-primary-300" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex align-items-center">
                    <span class="badge rounded-circle bg-primary ms-2 p-2">
                        <span class="material-icons fs-6 ">check</span>
                    </span>                    
                    <div class="toast-body fw-bold px-2" id="toastMessage">
                        <!-- 動態訊息將會插入在這裡 -->
                    </div>
                    <button type="button" class="btn-primary-50 btn-close btn-close-black me-2 m-auto" data-bs-dismiss="toast" aria-label="Close">
                    </button>
                </div>
            </div>
        </div>

              
        <div class="d-flex gap-3">
            <% if (showCompareButton) { %>
                <button type="button"
                    class="btn btn-gray-100 border border-gray-200 text-black fw-bold  px-6" onclick="showToast('商品已加入比較清單')">加入比較</button>
                <% } %>

                <button type="button" class="btn btn-primary-300 text-white fw-bold flex-grow-1" onclick="showToast('商品已加入購物車')">加入購物車</button>
        </div>
    </div>
</div>


<script>
    /* toast JS */
    function showToast(message) {
        const toastEl = document.getElementById('actionToast');
        const toastBody = document.getElementById('toastMessage');
        
        toastBody.textContent = message;
        // 使用 Bootstrap 提供的 Toast 類別顯示
        const toast = bootstrap.Toast.getOrCreateInstance(toastEl);
        toast.show();
    }

    /* 切換愛心JS */
    function toggleFavorite(button) {
        const icon = button.querySelector('.favorite-icon');
        const current = icon.textContent.trim();

        if (current === 'favorite_border') {
            icon.textContent = 'favorite';
            icon.classList.remove('text-gray-400');
            icon.classList.add('text-secondary-300');
        } else {
            icon.textContent = 'favorite_border';
            icon.classList.remove('text-secondary-300');
            icon.classList.add('text-gray-400');
        }
    }
</script>