<div class="card" style="max-width: 350px;">
    <div class="position-relative">
        <span class="position-absolute top-0  badge rounded-pill bg-primary-100 text-primary-400 fs-6 m-4 px-2 py-1">
            <span class="material-icons-outlined me-1 fs-6 align-bottom">
                eco
            </span>
            安心認證
        </span>
        <img src='/assets/images/<%= img %>.jpg' class="card-img-top" alt="商品圖片">
        <span class="position-absolute bottom-0 end-0 border rounded-circle bg-white m-4">
            <span class="material-icons-outlined fs-4 love-icon">favorite_border</span>
        </span>
    </div>

    <div class="card-body">
        <h6 class="text-primary-400 mb-1">
            <%= farm %>
        </h6>
        <h5 class="card-title fs-lg-<%= size %>">
            <%= title %>
        </h5>
        <p class="card-text text-gray-300  multi-line-truncate mb-3">
            <%= content %>
        </p>
        <div class="mb-3">
            <span class=" fs-5 fw-bold text-secondary-300 ">
                <%= price %>
            </span>
            <del class="text-gray-300  ms-2">
                <%= discount %>
            </del>
            <span class="mx-1 text-gray-300 ">
                <%= slash %>
            </span>
            <span class="text-gray-300 ">
                <%= grams %>
            </span>
        </div>


        <div class="d-flex gap-3">
            <% if (showCompareButton) { %>
                <button type="button"
                    class="btn btn-gray-100 border border-gray-200 text-black fw-bold  px-6">加入比較</button>
                <% } %>

                    <button type="button" class="btn btn-primary-300 text-white fw-bold flex-grow-1">加入購物車</button>
        </div>

    </div>
</div>